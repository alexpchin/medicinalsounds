= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :soundcloud, "Soundcloud url"
    = f.text_field :soundcloud
  .field
    = f.label :youtube, "Youtube url"
    = f.text_field :youtube
  .field
    = f.label :mixcloud, "Mixcloud url"
    = f.text_field :mixcloud
  .actions
    = f.submit
