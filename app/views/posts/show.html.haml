%p#notice= notice

%span.post-date
  .month
    = "#{@post.created_at.strftime("%d")}"
  .month
    = "#{@post.created_at.strftime("%B")[0...3]}"

%h2= @post.title

= @post.body

- if @post.try(:soundcloud)
  %iframe{:frameborder => "no", :height => "200", :scrolling => "no", :src => "https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/#{@post.soundcloud}&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&visual=true", :width => "100%"}


- if @post.youtube
  = @post.youtube

- if @post.mixcloud
  = @post.mixcloud

= link_to 'Edit', edit_post_path(@post)
|
\#{link_to 'Back', posts_path}
