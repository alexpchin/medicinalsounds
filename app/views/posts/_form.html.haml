= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .field
    = f.label :soundcloud
    %br/
    = f.text_field :soundcloud
  .field
    = f.label :youtube
    %br/
    = f.text_field :youtube
  .field
    = f.label :mixcloud
    %br/
    = f.text_field :mixcloud
  .field
    = f.label :user_id
    %br/
    = f.text_field :user_id
  .actions
    = f.submit
